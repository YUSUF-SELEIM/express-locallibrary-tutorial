<%- include('header') %>
  <h1><%= title %>: <%= book.title %></h1>

  <% if (allBookInstances.length) { %>
    <p><strong>Delete the following books Instances before attempting to delete this book.</strong></p>
    <div style="margin-left:20px; margin-top:20px;">
      <h4>Copies</h4>
      <dl>
        <% allBookInstances.forEach(instance => { %>
          <% if (instance.status==='Available' ) { %>
            <p class="text-success">
              <strong>Status:</strong>
              <%= instance.status %>
            </p>
            <% } else if (instance.status==='Maintenance' ) { %>
            <p class="text-danger">
              <strong>Status:</strong>
              <%= instance.status %>
            </p>
            <% } else { %>
            <p class="text-warning">
              <strong>Status:</strong>
              <%= instance.status %>
            </p>
            <% } %>
          <dd><%= instance.imprint %></dd>
          <dt>ID: <a href="<%= instance.url %>"><%= instance.id %></a></dt>
         <hr>
        <% }); %>
      </dl>
    </div>
  <% } else { %>
    <p>Do you really want to delete this Book?</p>
    <form method="POST">
      <div class="form-group">
        <input id="bookid" class="form-control" type="hidden" name="bookid" value="<%= book._id %>" />
      </div>
      <button class="btn btn-primary" type="submit">Delete</button>
    </form>
  <% } %>
  <%- include('footer') %>
